<table>
  <tr>
    <td width="500">
      <h1><%= @article.title %></h1>
    </td>
    <td colspan="2">
      <%= link_to "Edit", edit_article_path(@article) %>
      |
      <%= link_to "Delete", article_path(@article), data: {
        turbo_method: :delete,
        turbo_confirm: "Are you sure?"
      } %>
    </td>
  </tr>
  <tr>
    <td>
      <p><%= @article.body %></p>
    </td>
  </tr>
</table>

<h2>Comments</h2>
<%= render @article.comments %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>
